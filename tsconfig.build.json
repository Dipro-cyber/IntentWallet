{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": ".",
    "module": "CommonJS",
    "target": "ES2022",
    "declaration": false,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false
  },
  "include": ["server/**/*", "shared/**/*"]
}